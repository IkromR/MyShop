<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/latest_image"
            android:layout_width="135dp"
            android:layout_height="135dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:src="@drawable/phones"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/add_button_background"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/home_button_background"/>

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="@id/add_button_background"
            app:layout_constraintEnd_toEndOf="@id/add_button_background"
            app:layout_constraintStart_toStartOf="@id/add_button_background"
            app:layout_constraintBottom_toBottomOf="@id/add_button_background"
            android:src="@drawable/price_button_icon"/>


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat"
            android:textSize="7sp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="$ 180,000"/>

        <TextView
            android:id="@+id/name_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="1dp"
            android:lines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/price"
            android:text="Samsung S10"/>

        <TextView
            android:id="@+id/category"
            android:paddingTop="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:textSize="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/home_frag_background"
            android:textAlignment="center"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/name_brand"
            android:text="Phones"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>