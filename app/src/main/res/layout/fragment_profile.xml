<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="0.2">
            <ImageView
                android:src="@drawable/back_icon"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:paddingTop="10dp"
                android:paddingEnd="40dp"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/satria" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Change photo"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Satria Adhi Pradana"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="11dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/upload_icon"/>
                <TextView
                    android:layout_width="132dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="79dp"
                    android:layout_marginRight="79dp"
                    android:text="Upload item"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- Trade store -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/trade_store_icon" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="43dp"
                    android:text="Trade store"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <!-- Payment method -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/trade_store_icon" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="43dp"
                    android:text="Payment method"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <!-- Balance -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/trade_store_icon" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="43dp"
                    android:text="Balance"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="18dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="end"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:text="$ 1593"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- Trade history -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/trade_store_icon" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="43dp"
                    android:text="Trade history"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <!-- Restore Purchase -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/restore_purchase_icon" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="43dp"
                    android:text="Restore Purchase"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <!-- Help -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/restore_purchase_icon" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="43dp"
                    android:text="Help"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- Log out -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/restore_purchase_icon" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="43dp"
                    android:text="Log out"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>